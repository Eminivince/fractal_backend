NODE_ENV=development
PORT=4000
MONGODB_URI=mongodb://localhost:27017/fractal?replicaSet=rs0
# 1.2: Comma-separated allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000
# 1.5: JWT secret must be at least 32 characters
JWT_SECRET=dev-secret-change-me-must-be-32chars-minimum
# 1.1: Sumsub webhook secret is now required (not optional)
SUMSUB_WEBHOOK_SECRET=your-sumsub-webhook-secret-here

# Admin password for seed:admin (optional; default dev password used if unset)
# ADMIN_PASSWORD=your-secure-admin-password
JWT_EXPIRES_IN=8h
ANCHOR_WORKER_ENABLED=false
ANCHOR_RPC_URL=
ANCHOR_CHAIN_ID=11155111
ANCHOR_CONTRACT_ADDRESS=
ANCHOR_PRIVATE_KEY=
ANCHOR_POLL_INTERVAL_MS=30000
ANCHOR_CONFIRMATIONS=1
RECONCILIATION_WORKER_ENABLED=true
RECONCILIATION_INTERVAL_MS=300000
RECONCILIATION_TOLERANCE=0.5

NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_EMAIL_POLL_INTERVAL_MS=15000
NOTIFICATION_EMAIL_MAX_RETRIES=3
WORK_ORDER_SLA_ESCALATION_ENABLED=true
WORK_ORDER_SLA_ESCALATION_INTERVAL_MS=300000
WORK_ORDER_SLA_ESCALATION_BATCH_LIMIT=100
EMAIL_FROM=notifications@fractal.demo

# Primary email provider (SendGrid)
SENDGRID_API_KEY=

# Fallback email provider (SMTP via nodemailer)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Local binary storage directory for uploaded files (relative to apps/api)
FILE_STORAGE_PROVIDER=local
FILE_STORAGE_FALLBACK_TO_LOCAL=true
FILE_STORAGE_DIR=storage

# Optional Cloudinary storage (used when FILE_STORAGE_PROVIDER=cloudinary)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_UPLOAD_FOLDER=fractal

# Optional S3-compatible object storage (used when FILE_STORAGE_PROVIDER=s3)
S3_BUCKET=
S3_REGION=us-east-1
S3_ENDPOINT=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_SESSION_TOKEN=
S3_FORCE_PATH_STYLE=false
S3_KEY_PREFIX=fractal
